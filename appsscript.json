{
  "timeZone": "America/New_York",
  "runtimeVersion": "V8",
  "addOns": {
    "common": {
      "name": "GMail Retention",
      "logoUrl": "https://github.com/slwhitman/GMail-Retention/blob/master/src/html/W%20Bits%20Logo.jpg",
      "layoutProperties": {
        "primaryColor": "#2772ed"
      },
      "homepageTrigger": {
        "runFunction": "onHomepage",
        "enabled": true
      }
    },
    "gmail": {
      "homepageTrigger": {
          "enabled": true,
          "runFunction":"onHomepage"
        }
      }
    },

  "exceptionLogging": "STACKDRIVER",
